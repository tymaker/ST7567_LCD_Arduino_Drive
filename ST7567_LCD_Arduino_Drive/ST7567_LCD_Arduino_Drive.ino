void LCD_WriteCommand(unsigned char dat)
{
   unsigned char i;      //定义局部变量 
   unsigned char Series,Temp;                           //定义局部变量
   digitalWrite(LCDCS,LOW); //LCDCLK=0;
   delayMicroseconds(10); //延时10us 
   digitalWrite(LCDA0,LOW); //LCDA0=0;
   Series = dat;   
   for(i=0; i<8; i++)   
   {   
         digitalWrite(LCDCLK,LOW);  //LCDCLK = 0;                              //SCL=0    
     Temp=Series & 0x80;                    //屏蔽低7位   
     if(Temp)                               //如果Temp=1,则使SI=1.如果Temp+0,则使SI=0 
     {   
        digitalWrite(LCDSI,HIGH);  //LCDSI = 1;                    //SI=1   
     }   
     else   
     {   
       digitalWrite(LCDSI,LOW);  //LCDSI = 0;                   //SI=0   
     }
       delayMicroseconds(1);//延时5us 
        digitalWrite(LCDCLK,HIGH); //LCDCLK = 1;                          //SCL=1上升沿写 
       delayMicroseconds(1);//延时5us  
       Series = Series << 1;               //左移1位    
   }
   digitalWrite(LCDSI,LOW);  
   digitalWrite(LCDCS,HIGH); //LCDCS = 1
}
 
 
void LCD_WriteData(unsigned char dat)
{
   unsigned char i;      //定义局部变量 
   unsigned char Series,Temp;                           //定义局部变量
    
   digitalWrite(LCDCS,LOW);
   delayMicroseconds(10);//延时10us
   digitalWrite(LCDA0,HIGH);
 
   Series = dat;   
   for(i=0; i<8; i++)   
   {   
    digitalWrite(LCDCLK,LOW);               //SCL=0     
     Temp=Series & 0x80;                    //屏蔽低7位   
     if(Temp)                               //如果Temp=1,则使SI=1.如果Temp+0,则使SI=0 
     {   
        digitalWrite(LCDSI,HIGH);                    //SI=1   
     }   
     else   
     {   
       digitalWrite(LCDSI,LOW);                  //SI=0   
     }
     delayMicroseconds(1);//延时5us 
           
     digitalWrite(LCDCLK,HIGH);                          //SCL=1上升沿写 
     delayMicroseconds(1);//延时5us     
       Series = Series << 1;               //左移1位  
   }
   digitalWrite(LCDSI,LOW);  
   digitalWrite(LCDCS,HIGH); //LCDCS=1;
   
}
 
void InitLCD(void)
{
   digitalWrite(LCDCLK,LOW); //LCDCLK = 1
   digitalWrite(LCDSI,LOW);  //LCDSI  = 1
   digitalWrite(LCDCS,LOW);  //LCDCS  = 1
   delay(100); //延时50ms
   digitalWrite(LCDRS,LOW);   //LCDRS  = 0;//LCDRS复位有效
   delay(2);//延时2ms
   digitalWrite(LCDRS,HIGH);  //LCDRS  = 1;//LCDRS复位效
   delay(100);//延时50ms
   //delay(100);//延时50ms
   
   LCD_WriteCommand(0xE2);    //内部复位
   LCD_WriteCommand(0x60);    //Open Display
   LCD_WriteCommand(0xA2);    //0xa2LCD偏压比为1/9;0xa3 为偏压比1/7;128X64=1/9
   LCD_WriteCommand(0x25);    //0x20-0x27为V5电压内部Rb/Ra电阻调整设置 RR=4.5V
   LCD_WriteCommand(0x81);    //电气量模式设置
   LCD_WriteCommand(0x2F);    //0xa4LCD全不显示,0xa5为全显示
   LCD_WriteCommand(0x2C);    //内部电源供应控制模式
   LCD_WriteCommand(0x2E);
   LCD_WriteCommand(0x2F);
   LCD_WriteCommand(0xa4);
   LCD_WriteCommand(0xA0);    //(0xa0-0xa1为ADC方向选择)0xa0为Segment正向,0xa1 为Segment反向
   LCD_WriteCommand(0xC8);    //com输出模式 驱动方向为反向
   LCD_WriteCommand(0xA6);    //0xa6LCD正向显示,0xa7为反向显示
   LCD_WriteCommand(0x26);    //
   LCD_WriteCommand(0xAF);    //
   LCD_WriteCommand(0xB0);
   LCD_WriteCommand(0x10);
   LCD_WriteCommand(0x00);
   ClearLCD();
}
 
